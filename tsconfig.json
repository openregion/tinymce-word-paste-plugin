{
  "compilerOptions": {
    "strict": true,
    "lib": [
			"es2022",
			"dom"
		],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
		"declarationDir": "dist/types",
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true
  },
  "files": [
		"src/index.ts",
		"src/global.d.ts"
	]
}
